<% if @events.count != 0 %>
  <% if (Time.current > Time.parse(@start_time)) && (Time.current < Time.parse(@end_time)) %>
    <div id="eventCurrentdiv">
      <h3><%= link_to @name, event_path(@currconvo.id), title: @description %></h3>  
      <p> is LIVE right NOW!</p><br>
      <%= link_to "Join Conversation", "https://crowdpublishtv.herokuapp.com/" + @host.permalink, class: "btn btn-primary btn-lg", style: "margin-top: 10px; margin-bottom: 10px;" %>
      <br>
      Hosted by: <%= link_to @host.name, @host.permalink %>
    </div>
  <% elsif Time.current < Time.parse(@start_time) %>
    <div id="clockdiv">
      <div>
      <span class="days"></span>
      <div class="smalltext">Days</div>
      </div>
      <div>
        <span class="hours"></span>
        <div class="smalltext">Hours</div>
      </div>
      <div>
        <span class="minutes"></span>
        <div class="smalltext">Minutes</div>
      </div>
      <div>
        <span class="seconds"></span>
        <div class="smalltext">Seconds</div>
      </div>
      <script>
        initializeClock('clockdiv', '<%= @start_time %>');
      </script>
    </div> 
    <div id="nextEventdiv">
      <p>Until </p><h3><%= link_to @name, event_path(@events.first.id), title: @description %></h3><p> goes live!</p>
      <br>
      Hosted by: <%= link_to @host.name, @host.permalink %>
    </div>
  <% end %>
<% end %>